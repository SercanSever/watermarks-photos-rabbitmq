@model Product
@{
   Layout = "_Layout";
}

<div class="text-center">
   <h1 class="display-4">Create</h1>
</div>

<h2 class="d-flex justify-content-center">Create Product</h2>
<div class="row">
   <form asp-action="CreateProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group m-auto">
         <input type="text" asp-for="Name" class="form-control" placeholder="name...">
         <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group m-auto">
         <input type="text" asp-for="Stock" class="form-control" placeholder="stock..">
         <span asp-validation-for="Stock" class="text-danger"></span>
      </div>
      <div class="form-group m-auto">
         <input type="text" asp-for="Price" class="form-control" placeholder="price..">
         <span asp-validation-for="Price" class="text-danger"></span>
      </div>
      <div class="form-group m-auto">
         <input type="file" name="imageFile" class="form-control">
      </div>
      <button class="btn btn-sm btn-outline-success m-auto">Create</button>
   </form>
</div>
